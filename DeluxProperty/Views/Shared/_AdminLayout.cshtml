<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Deluxe Property & Automobile</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/icon.jpg" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#"><img src="~/Images/logo.png" width="180" height="35"/></a></li>
                   
                    <li><a href="~/Admin/PropertyList">Property</a></li> 
                    <li><a href="#">Automobile</a></li> 
                   
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-right">
                    <a href="#"class="dropdown-toggle" data-toggle="dropdown" ><i class="glyphicon glyphicon-user"></i>Admin<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Property","Addproperty")</li>
                            <li>@Html.ActionLink("Add Automobile", "Addautomobile")</li>
                            <li><a href="#"><i class="glyphicon glyphicon-log-out"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @if(TempData["message"]!=null)
        {
            <div class="alert alert-success">
                <center><p> @TempData["message"]</p></center>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
          
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>